
@model MusicZone.Models.Banda;

<body>
    <form asp-controller="Bandas" asp-action="NovaBanda" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Numeroelementos">Número de Elementos</label>
            <input asp-for="Numeroelementos" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Genero" >Género</label>
            <select asp-for="Genero" class="form-control">
                <option>POP</option>
                <option>Alternativa</option>
                <option>Rock</option>
                <option>Metal</option>
                <option>HipHop</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Top">Banda TOP:</label>
            <input asp-for="Top" />

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="NovaBanda" />
        </div>
    </form>

</body>
